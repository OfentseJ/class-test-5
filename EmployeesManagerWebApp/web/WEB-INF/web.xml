<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveEmployeeServlet</servlet-name>
        <servlet-class>za.ac.tut.web.RemoveEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayEmployeesServlet</servlet-name>
        <servlet-class>za.ac.tut.web.DisplayEmployeesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HighestPaidEmployeeServlet</servlet-name>
        <servlet-class>za.ac.tut.web.HighestPaidEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEmployeeServlet</servlet-name>
        <url-pattern>/AddEmployeeServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveEmployeeServlet</servlet-name>
        <url-pattern>/RemoveEmployeeServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayEmployeesServlet</servlet-name>
        <url-pattern>/DisplayEmployeesServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HighestPaidEmployeeServlet</servlet-name>
        <url-pattern>/HighestPaidEmployeeServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>403</error-code>
        <location>/forbidden.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>Manager</display-name>
        <web-resource-collection>
            <web-resource-name>ManagerResources</web-resource-name>
            <description>Resources available to a manager</description>
            <url-pattern>/remove_employee.html</url-pattern>
            <url-pattern>/display_employees.html</url-pattern>
            <url-pattern>/highest_paid_employee.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enable authentication of a manager</description>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>secretary</display-name>
        <web-resource-collection>
            <web-resource-name>SecretaryResources</web-resource-name>
            <description>Resources available to secretary</description>
            <url-pattern>/add_employee.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Enable authentication of a secretary</description>
            <role-name>secretary</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>FRealm</realm-name>
        <form-login-config>
            <form-login-page>/loginPage.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>A manager can remove, display all employees, display highest paid employee</description>
        <role-name>manager</role-name>
    </security-role>
    <security-role>
        <description>A secretary can add employee</description>
        <role-name>secretary</role-name>
    </security-role>
</web-app>
